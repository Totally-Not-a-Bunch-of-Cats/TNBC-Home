---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'time'> & { date: Date };

const { date, ...props } = Astro.props;
---

<time datetime={date?.toISOString()} {...props}>
	{
		date?.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
