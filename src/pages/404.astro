---
import Layout from "@layout/Layout.astro";
import { uri } from "@script/utils";
---

<Layout centered>
    <h1 class="text-4xl font-bold text-center underline decoration-wavy underline-offset-8 decoration-rose-500">
        404 Not Found
    </h1>
    <p class="text-center mt-8 text-lg">
        Oops it looks like the page you are trying to reach doesn't exist!
    </p>
    <a
      href={uri("/")}
      aria-label="Back to home page"
      class="mt-4"
    >
        <em class="underline underline-offset-4 hover:text-blue-300">
            Back to Home
        </em>
    </a>
</Layout>
